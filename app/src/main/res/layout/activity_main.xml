<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gautamnarayanan.t3.MainActivity">

    <RelativeLayout
        android:layout_width="395dp"
        android:layout_height="587dp"
        android:background="@drawable/poke3"
        tools:layout_editor_absoluteX="-5dp"
        tools:layout_editor_absoluteY="3dp">

        <EditText
            android:id="@+id/Gtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/Gbutton2"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_marginBottom="11dp"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp"
            android:ems="10"
            android:inputType="textPersonName"
            />

        <EditText
            android:id="@+id/Gtext2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/Gtext4"
            android:layout_alignStart="@+id/Gtext4"
            android:layout_below="@+id/Gtext4"
            android:layout_marginTop="26dp"
            android:ems="10"
            android:inputType="textPersonName"
            />

        <EditText
            android:id="@+id/Gtext3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/Gtext2"
            android:layout_alignBottom="@+id/Gtext2"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/Gtext2"
            android:layout_toRightOf="@+id/Gtext2"
            android:ems="10"
            android:inputType="textPersonName"
            />

        <EditText
            android:id="@+id/Gtext4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/Gimage"
            android:layout_marginEnd="55dp"
            android:layout_marginRight="55dp"
            android:layout_marginTop="22dp"
            android:ems="10"
            android:inputType="textPersonName"
            />

        <ImageView
            android:id="@+id/Gimage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/textView2"
            android:layout_toRightOf="@+id/textView2"
            android:adjustViewBounds="true"
            android:maxHeight="100dp"
            android:maxWidth="100dp"
            android:scaleType="center"
            app:srcCompat="@drawable/pokeball" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/Gtext4"
            android:layout_marginEnd="22dp"
            android:layout_marginRight="22dp"
            android:layout_toLeftOf="@+id/Gtext4"
            android:layout_toStartOf="@+id/Gtext4"
            android:text="Name:"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/Gtext2"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_marginBottom="11dp"
            android:text="Type:"
            android:textSize="20dp"
            />

        <ImageButton
            android:id="@+id/Gbutton"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_above="@+id/Gimage"
            android:layout_alignLeft="@+id/Gimage"
            android:layout_alignStart="@+id/Gimage"
            android:layout_marginBottom="77dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/search2" />

        <ImageButton
            android:id="@+id/Gbutton2"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignEnd="@+id/Gtext2"
            android:layout_alignRight="@+id/Gtext2"
            android:layout_alignTop="@+id/Gbutton"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/hsitory" />

        <EditText
            android:id="@+id/Gheight"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_alignRight="@+id/Gtext3"
            android:layout_alignEnd="@+id/Gtext3"
            android:layout_alignTop="@+id/Gimage"
            />

        <EditText
            android:id="@+id/Gweight"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_alignBottom="@+id/Gimage"
            android:layout_alignLeft="@+id/Gheight"
            android:layout_alignStart="@+id/Gheight"
            />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:text="Height:"
            android:textSize="20sp"
            android:layout_alignTop="@+id/Gimage"
            android:layout_alignRight="@+id/Gtext"
            android:layout_alignEnd="@+id/Gtext"
            android:layout_marginTop="12dp"
            />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:text="Weight:"
            android:textSize="20sp"
            android:layout_alignBaseline="@+id/Gweight"
            android:layout_alignBottom="@+id/Gweight"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
